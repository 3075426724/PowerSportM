@import "../../../style/skin.wxss";

.list {
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
}

.list .item {
	width: 100%;
	border-radius: 10rpx;
	background-color: #fff;
	padding: 0 0 20rpx;
	margin-bottom: 30rpx;
	position: relative;
}

.list .item image {
	width: 100%;
	height: 370rpx;
	border-top-left-radius: inherit;
	border-top-right-radius: inherit;
}

.list .item .more {
	position: absolute;
	right: 0;
	top: 285rpx;
	background-color: var(--projectColor);
	padding: 12rpx 15rpx 12rpx 25rpx;
	font-size: 22rpx;
	color: #fff;
	border-top-left-radius: 30rpx;
	border-bottom-left-radius: 30rpx;
}

.list .item .line {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: center;
	padding: 10rpx 20rpx;
}

.list .item .line .title {
	width: 100%; 
	display: flex;
	justify-items: center;
}

.list .item .line .title .name{
	flex:1;
	color: #000;
	font-size: 28rpx;
	font-weight: bold;
}

.list .item .line .title .cnt{
	font-size: 22rpx;
	color:var(--projectCompareColor); 
	margin-left:20rpx;
	text-align: right; 
}

.list .item .line .desc {
	width: 100%;
	color: #999;
	font-size: 24rpx;
	margin-top: 10rpx;
}

.tabs .tab { 
    margin-right: 25rpx!important; 
}