@import "../../../style/skin.wxss";

page {
	background-color: #fff;
}

.main {
	padding: 30rpx 30rpx;
}

.bg {
	width: 100%;
	height: 260rpx;
	background: linear-gradient(251.54deg,
			#666 -10.05%,
			#333 47.56%,
			#000 100.71%);
}

.bg .inner {
	width: 100%;
	height: 100%;
	background-image: linear-gradient(90deg,
			rgba(33, 233, 252, 0.12) 1%,
			rgba(0, 0, 0, 0) 5%),
		linear-gradient(rgba(33, 233, 252, 0.12) 1%, rgba(0, 0, 0, 0) 5%);
	background-size: 28px 28px;

}

.top {
	width: 100%;
	background-color: #fff;
	padding: 30rpx;
	border-radius: 10rpx;
	margin-top: -150rpx;
}

.top .line1 {
	width: 100%;
	display: flex;
	align-items: center;
	margin-bottom: 30rpx;
	margin-top: -90rpx;
}

.top .line1 .left {
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
	margin-right: 20rpx;
	border: 2rpx solid #fff;
}

.top .line1 .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	margin-top: 65rpx;
}

.top .line1 .right .name {
	font-size: 28rpx;
	color: #000;
	font-weight: bold;
}

.top .line1 .right .desc {
	font-size: 22rpx;
	color: #777;
	margin-top: 5rpx;
}

.top .line2 {
	font-size: 24rpx;
	line-height: 1.6;
}

.top .line3 {
	font-size: 24rpx;
	margin-top: 30rpx;
	line-height: 1.6;
}

.list {
	width: 100%;
	display: flex;
	flex-direction: column;
	margin-top: 50rpx;
}

.list .line {
	width: 100%;
	padding: 10rpx 0;
	font-size: 28rpx;
	font-weight: bold;
	text-align: center;
	margin-bottom: 10rpx;
	position: relative;
}

.list .line::before {
	content: '';
	position: absolute;
	width: 150rpx;
	height: 1rpx;
	background-color: #ccc;
	top: 50%;
	left: 65%;
}

.list .line::after {
	content: '';
	position: absolute;
	width: 150rpx;
	height: 1rpx;
	background-color: #ccc;
	top: 50%;
	right: 65%;
}

.list .item {
	width: 100%;
	display: flex;
	flex-direction: column;
	border-radius: 10rpx;
	margin-bottom: 40rpx;
}

.list .item image {
	width: 100%;
	height: 350rpx;
	border-top-left-radius: inherit;
	border-top-right-radius: inherit;
}

.list .item .title {
	width: 100%;
	font-size: 26rpx;
	font-weight: bold;
	color: #333;
	line-height: 2.5;
	padding: 0 10rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.list .item .title .more {
	width: 40rpx;
	text-align: right;
}